{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "startx-sv-php-template",
        "annotations": {
            "openshift.io/display-name": "Startx PHP WebServer (fedora)",
            "description": "PHP WebServer for dynamic web application running under Fedora",
            "iconClass": "icon-php",
            "tags": "startx,os,fedora,apache,httpd,php",
            "openshift.io/long-description": "This template provides an apache + php httpd webserver in a fedora container. Ready to use in openshift with a simple deployement config, or as a s2i builder for building web applications container. For more information about using this image, including OpenShift considerations, see https://github.com/startxfr/docker-images/blob/master/README.md.",
            "openshift.io/provider-display-name": "STARTX",
            "openshift.io/documentation-url": "https://github.com/startxfr/docker-images/blob/fc27/README.md",
            "openshift.io/support-url": "https://github.com/startxfr/docker-images/issues/new"
        }
    },
    "message": "The following container have been created in your project: ${APP_NAME} and you can use openshift console to log into.",
    "labels": {
        "template": "startx-sv-php-template"
    },
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "startx-sv-php",
                "annotations": {
                    "openshift.io/display-name": "Startx PHP WebServer",
                    "openshift.io/generated-by": "STARTX"
                },
                "labels": {
                    "base-image": "startx-sv-php",
                    "app": "${APP_NAME}",
                    "type": "${APP_TYPE}",
                    "provider": "startx"
                }
            },
            "spec": {
                "tags": [
                    {
                        "name": "fc27",
                        "annotations": {
                            "openshift.io/display-name": "Startx PHP WebServer (Fedora 27)",
                            "description": "PHP WebServer for dynamic web application running under Fedora 27",
                            "iconClass": "icon-php",
                            "tags": "builder,startx,fedora,apache,httpd,php",
                            "supports": "http",
                            "version": "fc27",
                            "sampleRepo": "https://github.com/startxfr/docker-images-example-php.git"
                        },
                        "from": {
                            "kind": "DockerImage",
                            "name": "startx/sv-php:fc27"
                        }
                    }
                ]
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "annotations": {
                    "openshift.io/display-name": "Application ${APP_NAME}",
                    "openshift.io/generated-by": "STARTX"
                },
                "labels": {
                    "base-image": "startx-sv-php",
                    "app": "${APP_NAME}",
                    "type": "${APP_TYPE}",
                    "provider": "startx"
                }
            },
            "spec": {
                "tags": [
                    {
                        "name": "fc27",
                        "annotations": {
                            "openshift.io/display-name": "Application ${APP_NAME}",
                            "description": "Base image for the application ${APP_NAME}",
                            "iconClass": "icon-php",
                            "tags": "startx,fedora,apache,httpd,php,application,${APP_NAME}",
                            "supports": "http",
                            "version": "rawhide"
                        }
                    }
                ]
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "generation": 2,
                "creationTimestamp": null,
                "labels": {
                    "app": "${APP_NAME}",
                    "type": "${APP_TYPE}",
                    "provider": "startx",
                    "template": "startx-sv-php-template"
                },
                "annotations": {
                    "openshift.io/generated-by": "STARTX"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Rolling",
                    "rollingParams": {
                        "updatePeriodSeconds": 1,
                        "intervalSeconds": 1,
                        "timeoutSeconds": 20,
                        "maxUnavailable": "25%",
                        "maxSurge": "25%",
                        "pre": {
                            "failurePolicy": "Abort",
                            "execNewPod": {
                                "command": [
                                    "/bin/sx-php",
                                    "pre-deploy"
                                ],
                                "env": [
                                    {
                                        "name": "SX_VERBOSE",
                                        "value": "true"
                                    },
                                    {
                                        "name": "SX_DEBUG",
                                        "value": "true"
                                    }
                                ],
                                "containerName": "${APP_NAME}"
                            }
                        },
                        "post": {
                            "failurePolicy": "Abort",
                            "execNewPod": {
                                "command": [
                                    "/bin/sx-php",
                                    "post-deploy"
                                ],
                                "env": [
                                    {
                                        "name": "SX_VERBOSE",
                                        "value": "true"
                                    },
                                    {
                                        "name": "SX_DEBUG",
                                        "value": "true"
                                    }
                                ],
                                "containerName": "${APP_NAME}"
                            }
                        }
                    },
                    "resources": {}
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${APP_NAME}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${APP_NAME}:fc27"
                            }
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "postCommit": {
                    "script": "/bin/sx-php info"
                },
                "replicas": 1,
                "test": false,
                "selector": {
                    "app": "${APP_NAME}",
                    "deploymentconfig": "${APP_NAME}"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "app": "${APP_NAME}",
                            "type": "${APP_TYPE}",
                            "provider": "startx",
                            "template": "startx-sv-php-template",
                            "deploymentconfig": "${APP_NAME}"
                        },
                        "annotations": {
                            "openshift.io/generated-by": "STARTX"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${APP_NAME}",
                                "image": " ",
                                "env": [
                                    {
                                        "name": "SX_VERBOSE",
                                        "value": "true"
                                    }
                                ],
                                "command": [
                                    "/bin/sx-php"
                                ],
                                "args": [
                                    "run"
                                ],
                                "resources": {},
                                "livenessProbe": {
                                    "exec": {
                                        "command": [
                                            "/bin/sx-php",
                                            "isLive"
                                        ]
                                    },
                                    "initialDelaySeconds": 4,
                                    "timeoutSeconds": 1,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "readinessProbe": {
                                    "exec": {
                                        "command": [
                                            "/bin/sx-php",
                                            "isReady"
                                        ]
                                    },
                                    "initialDelaySeconds": 4,
                                    "timeoutSeconds": 1,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "terminationMessagePath": "/dev/termination-log",
                                "imagePullPolicy": "Always"
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {}
                    }
                }
            },
            "status": {
                "observedGeneration": 2,
                "replicas": 1,
                "updatedReplicas": 1,
                "availableReplicas": 1
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "creationTimestamp": null,
                "labels": {
                    "app": "${APP_NAME}",
                    "type": "${APP_TYPE}",
                    "provider": "startx",
                    "template": "startx-sv-php-template"
                },
                "annotations": {
                    "openshift.io/generated-by": "STARTX"
                }
            },
            "spec": {
                "to": {
                    "kind": "Service",
                    "name": "${APP_NAME}",
                    "weight": 100
                }
            },
            "status": {
                "ingress": [
                    {
                        "routerName": "router",
                        "conditions": [
                            {
                                "type": "Admitted",
                                "status": "True"
                            }
                        ]
                    }
                ]
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "creationTimestamp": null,
                "labels": {
                    "app": "${APP_NAME}",
                    "type": "${APP_TYPE}",
                    "provider": "startx",
                    "template": "startx-sv-php-template"
                },
                "annotations": {
                    "openshift.io/generated-by": "STARTX"
                }
            },
            "spec": {
                "ports": [
                    {
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "app": "${APP_NAME}",
                    "deploymentconfig": "${APP_NAME}"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "creationTimestamp": null,
                "labels": {
                    "app": "${APP_NAME}",
                    "type": "${APP_TYPE}",
                    "provider": "startx",
                    "template": "startx-sv-php-template"
                },
                "annotations": {
                    "openshift.io/generated-by": "STARTX"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "GitHub",
                        "github": {
                            "secret": "${WEBHOOK_TOKEN}_${APP_NAME}"
                        }
                    },
                    {
                        "type": "Generic",
                        "generic": {
                            "secret": "${WEBHOOK_TOKEN}_${APP_NAME}"
                        }
                    },
                    {
                        "type": "ImageChange",
                        "imageChange": {}
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "runPolicy": "SerialLatestOnly",
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${SOURCE_GIT}",
                        "ref": "${SOURCE_BRANCH}"
                    }
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "startx-sv-php:fc27"
                        },
                        "env": [
                            {
                                "name": "SX_VERBOSE",
                                "value": "true"
                            }
                        ]
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APP_NAME}:fc27"
                    }
                },
                "resources": {},
                "postCommit": {
                    "command": [
                        "/bin/sx-php",
                        "post-build"
                    ]
                }
            },
            "status": {
                "lastVersion": 0
            }
        }
    ],
    "parameters": [
        {
            "name": "APP_NAME",
            "displayName": "Application name",
            "description": "The name of the created application",
            "value": "www-php",
            "required": true
        },
        {
            "name": "APP_TYPE",
            "displayName": "Application type",
            "description": "The type of the created application",
            "value": "application"
        },
        {
            "name": "SOURCE_GIT",
            "displayName": "Source repository",
            "description": "URL to the source code to use during build process",
            "value": "https://github.com/startxfr/docker-images-example-php.git",
            "required": true
        },
        {
            "name": "SOURCE_BRANCH",
            "displayName": "Source branch",
            "description": "Name of the default branch",
            "value": "fc27",
            "required": true
        },
        {
            "name": "WEBHOOK_TOKEN",
            "displayName": "Webhook token",
            "description": "Secret token to use for webhook to github or generic",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{24}",
            "required": true
        }
    ]
}