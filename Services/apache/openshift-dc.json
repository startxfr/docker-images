{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "startx-sv-apache",
        "annotations": {
            "openshift.io/display-name": "Startx Http Server (centos)",
            "description": "Http server for simple web application running on CentOS",
            "iconClass": "icon-apache",
            "tags": "startx,os,centos,apache,httpd",
            "openshift.io/long-description": "This template provides an apache httpd webserver in a centos container. Ready to use in openshift with a simple deployement config, or as a s2i builder for building web applications container. For more information about using this image, including OpenShift considerations, see https://github.com/startxfr/docker-images/blob/centos7/README.md.",
            "openshift.io/provider-display-name": "STARTX",
            "openshift.io/documentation-url": "https://github.com/startxfr/docker-images/blob/centos7/README.md",
            "openshift.io/support-url": "https://github.com/startxfr/docker-images/issues/new"
        }
    },
    "message": "The following container have been created in your project: ${APP_NAME} and you can use openshift console to log into.",
    "labels": {
        "template": "startx-sv-apache"
    },
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "annotations": {
                    "openshift.io/display-name": "Startx WebServer"
                },
                "labels": {
                    "app": "${APP_NAME}",
                    "provider": "startx",
                    "type": "${APP_TYPE}"
                }
            },
            "spec": {
                "tags": [
                    {
                        "name": "centos7",
                        "annotations": {
                            "openshift.io/display-name": "Startx WebServer (CentOS 7)",
                            "description": "Http server for simple web application running on CentOS 7",
                            "iconClass": "icon-apache",
                            "tags": "builder,startx,centos,apache,httpd",
                            "supports": "httpd",
                            "version": "rawhide",
                            "sampleRepo": "https://github.com/startxfr/docker-images-example-apache.git"
                        },
                        "from": {
                            "kind": "DockerImage",
                            "name": "startx/sv-apache:centos7"
                        }
                    }
                ]
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "generation": 2,
                "creationTimestamp": null,
                "labels": {
                    "app": "${APP_NAME}",
                    "provider": "startx",
                    "type": "${APP_TYPE}",
                    "template": "startx-sv-apache"
                },
                "annotations": {
                    "openshift.io/generated-by": "STARTX"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Rolling",
                    "rollingParams": {
                        "updatePeriodSeconds": 1,
                        "intervalSeconds": 1,
                        "timeoutSeconds": 40,
                        "maxUnavailable": "25%",
                        "maxSurge": "25%",
                        "post": {
                            "failurePolicy": "Abort",
                            "execNewPod": {
                                "command": [
                                    "/bin/sx",
                                    "info"
                                ],
                                "containerName": "${APP_NAME}"
                            }
                        }
                    },
                    "resources": {}
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${APP_NAME}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${APP_NAME}:centos7"
                            }
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "test": false,
                "selector": {
                    "app": "${APP_NAME}",
                    "deploymentconfig": "${APP_NAME}"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "app": "${APP_NAME}",
                            "provider": "startx",
                            "type": "${APP_TYPE}",
                            "template": "startx-sv-apache",
                            "deploymentconfig": "${APP_NAME}"
                        },
                        "annotations": {
                            "openshift.io/generated-by": "STARTX"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${APP_NAME}",
                                "image": "startx/sv-apache@sha256:5cb90731ded2b0f2d0d2c54b8a73bc869a419035f062e3ce431f9d4fec041300",
                                "command": [
                                    "/bin/sx-apache"
                                ],
                                "args": [
                                    "start"
                                ],
                                "resources": {},
                                "livenessProbe": {
                                    "exec": {
                                        "command": [
                                            "/bin/sx",
                                            "version"
                                        ]
                                    },
                                    "initialDelaySeconds": 5,
                                    "timeoutSeconds": 2,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "readinessProbe": {
                                    "exec": {
                                        "command": [
                                            "/bin/sx",
                                            "version"
                                        ]
                                    },
                                    "initialDelaySeconds": 2,
                                    "timeoutSeconds": 2,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "terminationMessagePath": "/dev/termination-log",
                                "imagePullPolicy": "Always"
                            }
                        ]
                    }
                }
            },
            "status": {
                "observedGeneration": 2,
                "replicas": 1,
                "updatedReplicas": 1,
                "availableReplicas": 1
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "creationTimestamp": null,
                "labels": {
                    "app": "${APP_NAME}",
                    "provider": "startx",
                    "type": "${APP_TYPE}",
                    "template": "startx-sv-apache"
                },
                "annotations": {
                    "openshift.io/generated-by": "STARTX"
                }
            },
            "spec": {
                "to": {
                    "kind": "Service",
                    "name": "${APP_NAME}",
                    "weight": 100
                }
            },
            "status": {
                "ingress": [
                    {
                        "routerName": "router",
                        "conditions": [
                            {
                                "type": "Admitted",
                                "status": "True"
                            }
                        ]
                    }
                ]
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "creationTimestamp": null,
                "labels": {
                    "app": "${APP_NAME}",
                    "provider": "startx",
                    "type": "${APP_TYPE}",
                    "template": "startx-sv-apache"
                },
                "annotations": {
                    "openshift.io/generated-by": "STARTX"
                }
            },
            "spec": {
                "ports": [
                    {
                        "protocol": "TCP",
                        "port": 80,
                        "targetPort": 80
                    }
                ],
                "selector": {
                    "app": "${APP_NAME}",
                    "deploymentconfig": "${APP_NAME}"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            },
            "status": {
                "loadBalancer": {}
            }
        }
    ],
    "parameters": [
        {
            "name": "APP_NAME",
            "displayName": "Application name",
            "description": "The name of the created application",
            "value": "apache",
            "required": true
        },
        {
            "name": "APP_TYPE",
            "displayName": "Application type",
            "description": "The type of the created application",
            "value": "webserver"
        }
    ]
}
