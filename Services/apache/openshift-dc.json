{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "startx-sv-apache",
        "annotations": {
            "openshift.io/display-name": "Startx Http Server (fedora)",
            "description": "Http server for simple web application running on Fedora",
            "iconClass": "icon-apache",
            "tags": "startx,os,fedora,apache,httpd",
            "openshift.io/long-description": "This template provides an apache httpd webserver in a fedora container. Ready to use in openshift with a simple deployement config, or as a s2i builder for building web applications container. For more information about using this image, including OpenShift considerations, see https://github.com/startxfr/docker-images/blob/master/README.md.",
            "openshift.io/provider-display-name": "STARTX",
            "openshift.io/documentation-url": "https://github.com/startxfr/docker-images/blob/master/README.md",
            "openshift.io/support-url": "https://github.com/startxfr/docker-images/issues/new"
        }
    },
    "message": "The following container have been created in your project: ${APP_NAME} and you can use openshift console to log into.",
    "labels": {
        "template": "startx-sv-apache"
    },
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "annotations": {
                    "openshift.io/display-name": "Startx WebServer"
                },
                "labels": {
                    "app": "${APP_NAME}",
                    "provider": "startx",
                    "type": "${APP_TYPE}"
                }
            },
            "spec": {
                "tags": [
                    {
                        "name": "fc26",
                        "annotations": {
                            "openshift.io/display-name": "Startx WebServer (Fedora 26)",
                            "description": "Http server for simple web application running on Fedora 26",
                            "iconClass": "icon-apache",
                            "tags": "builder,startx,fedora,apache,httpd",
                            "supports": "httpd",
                            "version": "26",
                            "sampleRepo": "https://github.com/startxfr/docker-images-example-apache.git"
                        },
                        "from": {
                            "kind": "DockerImage",
                            "name": "startx/sv-apache:fc26"
                        }
                    }
                ]
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "generation": 2,
                "creationTimestamp": null,
                "labels": {
                    "app": "${APP_NAME}",
                    "provider": "startx",
                    "type": "${APP_TYPE}"
                },
                "annotations": {
                    "openshift.io/generated-by": "STARTX"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate",
                    "recreateParams": {
                        "timeoutSeconds": 40,
                        "post": {
                            "failurePolicy": "Abort",
                            "execNewPod": {
                                "command": [
                                    "/bin/sx",
                                    "info"
                                ],
                                "containerName": "${APP_NAME}"
                            }
                        }
                    },
                    "resources": {}
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${APP_NAME}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${APP_NAME}:fc26"
                            }
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "test": false,
                "selector": {
                    "app": "${APP_NAME}",
                    "deploymentconfig": "${APP_NAME}"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "app": "${APP_NAME}",
                            "deploymentconfig": "${APP_NAME}",
                            "provider": "startx",
                            "type": "${APP_TYPE}"
                        },
                        "annotations": {
                            "openshift.io/generated-by": "STARTX"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${APP_NAME}",
                                "image": "startx/sv-apache@sha256:5cb90731ded2b0f2d0d2c54b8a73bc869a419035f062e3ce431f9d4fec041300",
                                "command": [
                                    "/bin/sx"
                                ],
                                "args": [
                                    "daemon"
                                ],
                                "resources": {},
                                "livenessProbe": {
                                    "exec": {
                                        "command": [
                                            "/bin/sx",
                                            "version"
                                        ]
                                    },
                                    "initialDelaySeconds": 5,
                                    "timeoutSeconds": 2,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "readinessProbe": {
                                    "exec": {
                                        "command": [
                                            "/bin/sx",
                                            "version"
                                        ]
                                    },
                                    "initialDelaySeconds": 2,
                                    "timeoutSeconds": 2,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "terminationMessagePath": "/dev/termination-log",
                                "imagePullPolicy": "Always"
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {}
                    }
                }
            },
            "status": {
                "observedGeneration": 2,
                "replicas": 1,
                "updatedReplicas": 1,
                "availableReplicas": 1
            }
        }
    ],
    "parameters": [
        {
            "name": "APP_NAME",
            "displayName": "Application name",
            "description": "The name of the created application",
            "value": "apache",
            "required": true
        },
        {
            "name": "APP_TYPE",
            "displayName": "Application type",
            "description": "The type of the created application",
            "value": "webserver"
        }
    ]
}
