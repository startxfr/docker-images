{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "startx-os-fedora-template",
        "annotations": {
            "openshift.io/display-name": "Startx Base OS (fedora)",
            "description": "Minimal Fedora OS container for bash operations",
            "iconClass": "icon-beaker",
            "tags": "startx,os,fedora",
            "openshift.io/long-description": "This template provides a fedora container with minimal tools and scripts. Ready to use in openshift with a simple deployement config, or as a s2i builder for bash applications. For more information about using this image, including OpenShift considerations, see https://github.com/startxfr/docker-images/blob/master/README.md.",
            "openshift.io/provider-display-name": "STARTX",
            "openshift.io/documentation-url": "https://github.com/startxfr/docker-images/blob/master/README.md",
            "openshift.io/support-url": "https://github.com/startxfr/docker-images/issues/new"
        }
    },
    "message": "Your service is deploying on your project environment.\n\nService type: ${APP_TYPE}\nService name: ${APP_NAME}",
    "labels": {
        "template": "startx-os-fedora-template"
    },
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "annotations": {
                    "openshift.io/display-name": "Startx Base OS (fedora)"
                },
                "labels": {
                    "app": "${APP_NAME}",
                    "type": "${APP_TYPE}",
                    "provider": "startx",
                    "template": "startx-os-fedora-template"
                }
            },
            "spec": {
                "tags": [
                    {
                        "name": "latest",
                        "annotations": {
                            "openshift.io/display-name": "Startx Fedora (latest)",
                            "description": "Minimal Fedora OS for bash operations",
                            "iconClass": "icon-beaker",
                            "tags": "builder,startx,fedora",
                            "supports": "fedora",
                            "version": "latest",
                            "sampleRepo": "https://github.com/startxfr/docker-images-example-bash.git"
                        },
                        "from": {
                            "kind": "DockerImage",
                            "name": "startx/fedora:latest"
                        }
                    }
                ]
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "generation": 2,
                "creationTimestamp": null,
                "labels": {
                    "app": "${APP_NAME}",
                    "type": "${APP_TYPE}",
                    "provider": "startx",
                    "template": "startx-os-fedora-template"
                },
                "annotations": {
                    "openshift.io/generated-by": "STARTX"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate",
                    "recreateParams": {
                        "timeoutSeconds": 40,
                        "pre": {
                            "failurePolicy": "Abort",
                            "execNewPod": {
                                "command": [
                                    "/bin/sx",
                                    "pre-deploy"
                                ],
                                "containerName": "${APP_NAME}"
                            }
                        },
                        "post": {
                            "failurePolicy": "Abort",
                            "execNewPod": {
                                "command": [
                                    "/bin/sx",
                                    "post-deploy"
                                ],
                                "containerName": "${APP_NAME}"
                            }
                        }
                    },
                    "resources": {}
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${APP_NAME}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${APP_NAME}:latest"
                            }
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "postCommit": {
                    "script": "/bin/sx info"
                },
                "replicas": 1,
                "test": false,
                "selector": {
                    "app": "${APP_NAME}",
                    "deploymentconfig": "${APP_NAME}"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "app": "${APP_NAME}",
                            "type": "${APP_TYPE}",
                            "provider": "startx",
                            "template": "startx-os-fedora-template",
                            "deploymentconfig": "${APP_NAME}"
                        },
                        "annotations": {
                            "openshift.io/generated-by": "STARTX"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${APP_NAME}",
                                "image": " ",
                                "command": [
                                    "/bin/sx"
                                ],
                                "args": [
                                    "run"
                                ],
                                "resources": {},
                                "livenessProbe": {
                                    "exec": {
                                        "command": [
                                            "/bin/sx",
                                            "isLive"
                                        ]
                                    },
                                    "initialDelaySeconds": 5,
                                    "timeoutSeconds": 2,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "readinessProbe": {
                                    "exec": {
                                        "command": [
                                            "/bin/sx",
                                            "isReady"
                                        ]
                                    },
                                    "initialDelaySeconds": 2,
                                    "timeoutSeconds": 2,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "terminationMessagePath": "/dev/termination-log",
                                "imagePullPolicy": "Always"
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {}
                    }
                }
            },
            "status": {
                "observedGeneration": 2,
                "replicas": 1,
                "updatedReplicas": 1,
                "availableReplicas": 1
            }
        }
    ],
    "parameters": [
        {
            "name": "APP_NAME",
            "displayName": "Application name",
            "description": "The name of the created application",
            "value": "fedora",
            "required": true
        },
        {
            "name": "APP_TYPE",
            "displayName": "Application type",
            "description": "The type of the created application",
            "value": "system"
        }
    ]
}