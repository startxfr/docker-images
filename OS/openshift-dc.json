{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "startx-os",
        "annotations": {
            "openshift.io/display-name": "Startx Base OS (fedora/Centos)",
            "description": "Minimal Fedora/CentOS OS container for bash operations",
            "iconClass": "icon-beaker",
            "tags": "startx,os,fedora,centos",
            "openshift.io/long-description": "This template provides a fedora or centos container with minimal tools and scripts. Ready to use in openshift with a simple deployement config, or as a s2i builder for bash applications. For more information about using this image, including OpenShift considerations, see https://github.com/startxfr/docker-images/blob/master/README.md.",
            "openshift.io/provider-display-name": "STARTX",
            "openshift.io/documentation-url": "https://github.com/startxfr/docker-images/blob/master/README.md",
            "openshift.io/support-url": "https://github.com/startxfr/docker-images/issues/new"
        }
    },
    "message": "The following container have been created in your project: ${APP_NAME} and you can use openshift console to log into.",
    "labels": {
        "template": "startx-os"
    },
    "objects": [
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_NAME}",
                "generation": 2,
                "creationTimestamp": null,
                "labels": {
                    "app": "${APP_NAME}",
                    "provider": "startx",
                    "type": "${APP_TYPE}"
                },
                "annotations": {
                    "openshift.io/generated-by": "STARTX"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate",
                    "recreateParams": {
                        "timeoutSeconds": 40,
                        "post": {
                            "failurePolicy": "Abort",
                            "execNewPod": {
                                "command": [
                                    "/bin/sx",
                                    "info"
                                ],
                                "containerName": "${APP_NAME}"
                            }
                        }
                    },
                    "resources": {}
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${APP_NAME}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "namespace": "${IMAGE_NAMESPACE}",
                                "name": "${IMAGE_STREAM}:${IMAGE_TAG}"
                            }
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "test": false,
                "selector": {
                    "app": "${APP_NAME}",
                    "deploymentconfig": "${APP_NAME}"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "app": "${APP_NAME}",
                            "deploymentconfig": "${APP_NAME}",
                            "provider": "startx",
                            "type": "${APP_TYPE}"
                        },
                        "annotations": {
                            "openshift.io/generated-by": "STARTX"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${APP_NAME}",
                                "image": "startx/fedora@sha256:7566c86d34616e3a4b597ff7c616aae6e15cb0fee0b04bd6f7fd3390b6dd8d3c",
                                "command": [
                                    "/bin/sx"
                                ],
                                "args": [
                                    "daemon"
                                ],
                                "resources": {},
                                "livenessProbe": {
                                    "exec": {
                                        "command": [
                                            "/bin/sx",
                                            "version"
                                        ]
                                    },
                                    "initialDelaySeconds": 5,
                                    "timeoutSeconds": 2,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "readinessProbe": {
                                    "exec": {
                                        "command": [
                                            "/bin/sx",
                                            "version"
                                        ]
                                    },
                                    "initialDelaySeconds": 2,
                                    "timeoutSeconds": 2,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3
                                },
                                "terminationMessagePath": "/dev/termination-log",
                                "imagePullPolicy": "Always"
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {}
                    }
                }
            },
            "status": {
                "observedGeneration": 2,
                "replicas": 1,
                "updatedReplicas": 1,
                "availableReplicas": 1
            }
        }
    ],
    "parameters": [
        {
            "name": "APP_NAME",
            "displayName": "Application name",
            "description": "The name of the created application",
            "value": "startx-os",
            "required": true
        },
        {
            "name": "APP_TYPE",
            "displayName": "Application type",
            "description": "The type of the created application",
            "value": "os"
        },
        {
            "name": "IMAGE_NAMESPACE",
            "displayName": "Image namespace",
            "description": "Namespace where the image reside. If no image, you can import startx OS image streams",
            "value": "openshift",
            "required": true
        },
        {
            "name": "IMAGE_STREAM",
            "displayName": "Image stream",
            "description": "Name of the image stream to use",
            "value": "startx-os",
            "required": true
        },
        {
            "name": "IMAGE_TAG",
            "displayName": "Image tag",
            "description": "Tag of the image to use. Available in startx OS image streams are fc26, fc27, centos7, rawhide, latest",
            "value": "rawhide",
            "required": true
        }
    ]
}
